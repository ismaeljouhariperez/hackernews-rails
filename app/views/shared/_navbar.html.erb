<nav class="flex h-16 items-center justify-between max-w-[80vw] mx-auto">
  <!-- Logo -->
    <%= link_to root_path, class: "flex items-center" do %>
      <%= image_tag "logo.svg", alt: "Hacker News", class: "h-10 w-auto" %>
    <% end %>
  
  <!-- Login Button -->
    <% if user_signed_in? %>
      <%= link_to "Submit", "#", class: "btn-primary mr-4" %>
      <%= link_to "Profile", "#", class: "link-primary mr-4" %>
      <%= link_to "Logout", destroy_user_session_path, method: :delete, 
                  class: "text-secondary hover:text-[--color-text] transition-colors" %>
    <% else %>
      <%= link_to "Login", new_user_session_path, class: "btn-login" %>
    <% end %>
</nav>
