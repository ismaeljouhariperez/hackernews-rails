<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Signup Form -->
    <div class="bg-white border border-secondary/20 rounded-lg p-8 shadow-sm">
      <h2 class="text-xl text-center mb-6">Create your account</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), 
                          html: { class: "space-y-6" }) do |f| %>

        <%= f.error_notification %>

        <div class="form-inputs space-y-4">
          <%= f.input :username,
                      required: true,
                      autofocus: true,
                      input_html: { 
                        autocomplete: "username",
                        class: "w-full px-3 py-2 border border-secondary/30 rounded-md text-sm 
                               focus:ring-2 focus:ring-primary focus:border-primary 
                               transition-colors",
                        placeholder: "Choose a unique username"
                      },
                      label_html: { class: "block text-sm font-medium mb-1" },
                      wrapper_html: { class: "mb-4" } %>

          <%= f.input :email,
                      label: "Email address",
                      required: true,
                      input_html: { 
                        autocomplete: "email",
                        class: "w-full px-3 py-2 border border-secondary/30 rounded-md text-sm 
                               focus:ring-2 focus:ring-primary focus:border-primary 
                               transition-colors"
                      },
                      label_html: { class: "block text-sm font-medium mb-1" },
                      wrapper_html: { class: "mb-4" } %>

          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { 
                        autocomplete: "new-password",
                        class: "w-full px-3 py-2 border border-secondary/30 rounded-md text-sm 
                               focus:ring-2 focus:ring-primary focus:border-primary 
                               transition-colors"
                      },
                      label_html: { class: "block text-sm font-medium mb-1" },
                      hint_html: { class: "text-xs mt-1" },
                      wrapper_html: { class: "mb-4" } %>

          <%= f.input :password_confirmation,
                      label: "Confirm password",
                      required: true,
                      input_html: { 
                        autocomplete: "new-password",
                        class: "w-full px-3 py-2 border border-secondary/30 rounded-md text-sm 
                               focus:ring-2 focus:ring-primary focus:border-primary 
                               transition-colors"
                      },
                      label_html: { class: "block text-sm font-medium mb-1" },
                      wrapper_html: { class: "mb-4" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Create account", 
                       class: "w-full btn-login text-center justify-center py-3" %>
        </div>
      <% end %>

      <!-- Links -->
      <div class="mt-6 pt-6 border-t border-secondary/10">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
