<div class="min-h-screen bg-background flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Reset Password Form -->
    <div class="bg-white border border-secondary/20 rounded-lg p-8 shadow-sm">
      <div class="mb-6 flex flex-col items-center gap-6">
        <h2 class="text-xl text-center">Reset your password</h2>
        <p class="mt-2 text-sm">
          Enter your email address and we'll send you a link to reset your password.
        </p>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), 
                          html: { method: :post, class: "space-y-6" }) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email,
                      label: "Email address",
                      required: true,
                      autofocus: true,
                      input_html: { 
                        class: "w-full px-3 py-2 border border-secondary/30 rounded-md text-sm 
                               focus:ring-2 focus:ring-primary focus:border-primary 
                               transition-colors",
                        placeholder: "Enter your email address"
                      },
                      label_html: { class: "block text-sm font-medium mb-1" },
                      wrapper_html: { class: "mb-4" } %>
        </div>
        <div class="form-actions flex justify-center">
          <%= f.button :submit, "Send reset instructions", 
                       class: "w-full btn-reset hover:btn-primary text-center justify-center py-3" %>
        </div>
      <% end %>
      <!-- Links -->
      <div class="mt-6 pt-6 border-t border-secondary/10">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
